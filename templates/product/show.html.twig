{% extends 'base.html.twig' %}

{% block title %}Observando{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span id="card_title">Observando {{product.name|capitalize}}</span>
                            <div class="float-right">
                                <a href="/producto" class="btn btn-warning float-right">
                                    Atrás
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <strong>Code:</strong>
                            {{product.code|upper}}
                        </div>
                        <div class="form-group">
                            <strong>Name:</strong>
                            {{product.name|capitalize}}
                        </div>
                        <div class="form-group">
                            <strong>Description:</strong>
                            {{product.description|capitalize}}
                        </div>
                        <div class="form-group">
                            <strong>Brand:</strong>
                            {{product.brand|capitalize}}
                        </div>
                        <div class="form-group">
                            <strong>Category:</strong>
                            {{product.category.name|capitalize}}
                        </div>
                        <div class="form-group">
                            <strong>Price:</strong>
                            {{product.price|capitalize}}
                        </div>
                        <div class="form-group">
                            <strong>Creación:</strong>
                            {{product.createdAt|date("m/d/Y")}}
                        </div>
                        <div class="form-group">
                            <strong>Última actualización:</strong>
                            {{product.updatedAt|date("m/d/Y")}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
